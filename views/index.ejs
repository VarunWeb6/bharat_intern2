<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Money Tracker</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 text-white px-3 py-2">
        <h1 class="text-4xl mb-5">Money Tracker</h1>
        <form action="/add" method="POST">
          <select class="bg-blue-500 border-zinc-600 border-2 px-3 py-2 rounded-lg select-auto" name="type" required>
            <option value="income">Income</option>
            <option value="expense">Expense</option>
          </select>
          <input class="bg-transparent border-zinc-600 border-2 px-3 py-2 rounded-lg" type="number" name="amount" placeholder="Amount" required>
          <input class="bg-transparent border-zinc-600 border-2 px-3 py-2 rounded-lg" type="text" name="description" placeholder="Description">
          <button class="bg-blue-500 px-3 py-2 rounded-lg mb-5" type="submit">Add Transaction</button>
        </form>
        <ul class="text-2xl">
          <% transactions.forEach(transaction => { %>
            <li> ~
              <%= transaction.type %> - <%= transaction.amount %> - <%= transaction.description %> - <%= transaction.date.toDateString() %> 
            </li>
          <% }) %>
        </ul>
      </div>
</body>
</html>